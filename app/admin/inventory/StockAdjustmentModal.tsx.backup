'use client';

import { useState, useEffect } from 'react';
import { X, Package, Plus, Minus, Search, Info } from 'lucide-react';
import { ProductWithType, ApiResponse } from '@/lib/types';

interface StockAdjustmentModalProps {
  product: ProductWithType | null;
  onClose: () => void;
  onSuccess: () => void;
}

interface AdjustmentItem {
  product_id: string;
  name: string;
  current_stock: number;
  quantity_change: number;
  transaction_type: 'restock' | 'adjustment';
  notes: string;
  selected: boolean;
}

export default function StockAdjustmentModal({ product, onClose, onSuccess }: StockAdjustmentModalProps) {
  const [loading, setLoading] = useState(false);
  const [products, setProducts] = useState<ProductWithType[]>([]);
  const [adjustments, setAdjustments] = useState<AdjustmentItem[]>([]);
  const [searchQuery, setSearchQuery] = useState('');
  const [showOnlySelected, setShowOnlySelected] = useState(false);

  // Fetch products if bulk mode
  useEffect(() => {
    if (!product) {
      fetchProducts();
    } else {
      // Single product mode
      setAdjustments([{
        product_id: product.id,
        name: product.name,
        current_stock: product.stock,
        quantity_change: 0,
        transaction_type: 'restock',
        notes: '',
        selected: true
      }]);
    }
  }, [product]);

  const fetchProducts = async () => {
    try {
      const response = await fetch('/api/admin/inventory?limit=100');
      const result: ApiResponse<{ data: ProductWithType[] }> = await response.json();

      if (result.success && result.data?.data) {
        const adjustmentItems = result.data.data.map(p => ({
          product_id: p.id,
          name: p.name,
          current_stock: p.stock,
          quantity_change: 0,
          transaction_type: 'restock' as const,
          notes: '',
          selected: false
        }));
        setAdjustments(adjustmentItems);
        setProducts(result.data.data);
      }
    } catch (error) {
      console.error('Failed to fetch products:', error);
    }
  };

  const updateAdjustment = (index: number, field: keyof AdjustmentItem, value: any) => {
    const updatedAdjustments = [...adjustments];
    updatedAdjustments[index] = {
      ...updatedAdjustments[index],
      [field]: value
    };

    // Auto-select product when making changes in bulk mode
    if (!product && field !== 'selected' && value !== 0) {
      updatedAdjustments[index].selected = true;
    }

    setAdjustments(updatedAdjustments);
  };

  const toggleProductSelection = (index: number) => {
    const updatedAdjustments = [...adjustments];
    updatedAdjustments[index].selected = !updatedAdjustments[index].selected;
    setAdjustments(updatedAdjustments);
  };

  const selectAllProducts = () => {
    const filteredProducts = getFilteredProducts();
    const updatedAdjustments = adjustments.map(adj => {
      const isInFilter = filteredProducts.some(p => p.product_id === adj.product_id);
      return { ...adj, selected: isInFilter };
    });
    setAdjustments(updatedAdjustments);
  };

  const deselectAllProducts = () => {
    const updatedAdjustments = adjustments.map(adj => ({ ...adj, selected: false }));
    setAdjustments(updatedAdjustments);
  };

  const increaseQuantity = (index: number) => {
    const currentValue = adjustments[index].quantity_change;
    updateAdjustment(index, 'quantity_change', currentValue + 1);
  };

  const decreaseQuantity = (index: number) => {
    const currentValue = adjustments[index].quantity_change;
    updateAdjustment(index, 'quantity_change', currentValue - 1);
  };

  const handleBulkReset = () => {
    const resetAdjustments = adjustments.map((adj, index) => ({
      ...adj,
      quantity_change: 0,
      transaction_type: 'restock' as const,
      notes: '',
      selected: false
    }));
    setAdjustments(resetAdjustments);
  };

  const calculateNewStock = (currentStock: number, quantityChange: number) => {
    return currentStock + quantityChange;
  };

  const getFilteredProducts = () => {
    let filtered = adjustments;

    if (searchQuery) {
      filtered = filtered.filter(adj =>
        adj.name.toLowerCase().includes(searchQuery.toLowerCase())
      );
    }

    if (showOnlySelected) {
      filtered = filtered.filter(adj => adj.selected);
    }

    return filtered;
  };

  const validateAdjustments = () => {
    const validAdjustments = adjustments.filter(adj =>
      adj.selected && adj.quantity_change !== 0
    );

    if (validAdjustments.length === 0) {
      alert('Please select at least one product and specify quantity changes');
      return false;
    }

    const hasInvalidStock = validAdjustments.some(adj =>
      calculateNewStock(adj.current_stock, adj.quantity_change) < 0
    );

    if (hasInvalidStock) {
      alert('Stock cannot be negative after adjustment');
      return false;
    }

    return true;
  };

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();

    if (!validateAdjustments()) {
      return;
    }

    setLoading(true);
    try {
      const validAdjustments = adjustments.filter(adj =>
        adj.selected && adj.quantity_change !== 0
      );

      const stockAdjustments = validAdjustments.map(adj => ({
        product_id: adj.product_id,
        quantity_change: adj.quantity_change,
        transaction_type: adj.quantity_change >= 0 ? 'restock' : 'adjustment' as const,
        notes: adj.notes || `Stock adjustment: ${adj.quantity_change > 0 ? '+' : ''}${adj.quantity_change} units`
      }));

      if (stockAdjustments.length > 0) {
        const response = await fetch('/api/admin/inventory', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ adjustments: stockAdjustments }),
        });

        const result = await response.json();

        if (result.success) {
          alert(`Stock updated successfully for ${stockAdjustments.length} product(s)`);
          onSuccess();
          onClose();
        } else {
          alert(result.error || 'Failed to update stock');
        }
      } else {
        alert('No stock changes to apply');
      }
    } catch (error) {
      console.error('Error processing updates:', error);
      alert('Failed to process stock adjustments');
    } finally {
      setLoading(false);
    }
  };

  const getStockStatusBadge = (currentStock: number, quantityChange: number) => {
    const newStock = calculateNewStock(currentStock, quantityChange);
    if (newStock === 0) {
      return <span className="text-xs text-red-600 dark:text-red-400 bg-red-100 dark:bg-red-900/30 px-2 py-0.5 rounded-full inline-block">Out of Stock</span>;
    } else if (newStock <= 10) {
      return <span className="text-xs text-yellow-600 dark:text-yellow-400 bg-yellow-100 dark:bg-yellow-900/30 px-2 py-0.5 rounded-full inline-block">Low Stock</span>;
    } else {
      return <span className="text-xs text-green-600 dark:text-green-400 bg-green-100 dark:bg-green-900/30 px-2 py-0.5 rounded-full inline-block">In Stock</span>;
    }
  };

  const selectedCount = adjustments.filter(adj => adj.selected).length;
  const hasChangesCount = adjustments.filter(adj =>
    adj.selected && adj.quantity_change !== 0
  ).length;
  const filteredProducts = getFilteredProducts();
  const totalStockChange = adjustments.reduce((sum, adj) =>
    adj.selected ? sum + adj.quantity_change : sum, 0
  );

  return (
    <div className="fixed inset-0 z-50 overflow-y-auto bg-black bg-opacity-50 flex items-center justify-center p-4">
      <div className="bg-white dark:bg-slate-900 rounded-lg shadow-2xl w-full max-w-6xl max-h-[90vh] overflow-hidden flex flex-col">
        <div className="p-6 border-b border-slate-200 dark:border-slate-700 flex justify-between items-center">
          <h1 className="text-xl font-bold text-slate-800 dark:text-slate-100">
            {product ? 'Product Stock Adjustment' : 'Bulk Stock Adjustment'}
          </h1>
          <button
            onClick={onClose}
            className="text-slate-500 dark:text-slate-400 hover:bg-slate-100 dark:hover:bg-slate-800 rounded-full p-1.5"
          >
            <X className="w-5 h-5" />
          </button>
        </div>

        <form onSubmit={handleSubmit} className="flex-1 overflow-hidden flex flex-col">
          {!product && (
            <div className="p-6 border-b border-slate-200 dark:border-slate-700">
              <div className="flex flex-col md:flex-row gap-4 items-center">
                <div className="relative w-full md:flex-1">
                  <div className="absolute inset-y-0 left-0 flex items-center pl-3 pointer-events-none">
                    <Search className="w-4 h-4 text-slate-400" />
                  </div>
                  <input
                    type="text"
                    placeholder="Search products..."
                    value={searchQuery}
                    onChange={(e) => setSearchQuery(e.target.value)}
                    className="w-full bg-slate-50 dark:bg-slate-800 border border-slate-300 dark:border-slate-700 rounded-lg pl-10 pr-4 py-2 focus:ring-blue-500 focus:border-blue-500"
                  />
                </div>

                <div className="flex items-center gap-2 w-full md:w-auto">
                  <button
                    type="button"
                    onClick={() => setShowOnlySelected(!showOnlySelected)}
                    className={`text-sm font-medium px-4 py-2 rounded-md transition-colors ${
                      showOnlySelected
                        ? 'text-blue-600 dark:text-blue-400 bg-blue-50 dark:bg-blue-900/20 border border-blue-200 dark:border-blue-800'
                        : 'text-slate-700 dark:text-slate-200 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 hover:bg-slate-50 dark:hover:bg-slate-700'
                    }`}
                  >
                    Show Selected ({selectedCount})
                  </button>
                  <button
                    type="button"
                    onClick={selectAllProducts}
                    className="text-sm font-medium px-4 py-2 text-white bg-green-500 rounded-md hover:bg-green-600"
                  >
                    Select All
                  </button>
                  <button
                    type="button"
                    onClick={deselectAllProducts}
                    className="text-sm font-medium px-4 py-2 text-slate-700 dark:text-slate-200 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-md hover:bg-slate-50 dark:hover:bg-slate-700"
                  >
                    Deselect All
                  </button>
                </div>
              </div>
            )}
          )}

          <div className="flex-1 overflow-auto">
            <table className="w-full text-sm text-left">
              <thead className="text-xs text-slate-500 dark:text-slate-400 uppercase bg-slate-50 dark:bg-slate-800 sticky top-0 z-10">
                <tr>
                  {!product && (
                    <th className="p-3 w-10">
                      <input
                        type="checkbox"
                        checked={selectedCount === filteredProducts.length && filteredProducts.length > 0}
                        onChange={(e) => e.target.checked ? selectAllProducts() : deselectAllProducts()}
                        className="rounded border-slate-400 text-blue-600 focus:ring-blue-500"
                      />
                    </th>
                  )}
                  <th className="p-3 font-medium">Product</th>
                  <th className="p-3 font-medium text-center">Current Stock</th>
                  <th className="p-3 font-medium text-center">Stock Change</th>
                  <th className="p-3 font-medium text-center">New Stock</th>
                  <th className="p-3 font-medium text-center">Status</th>
                  <th className="p-3 font-medium">Notes</th>
                </tr>
              </thead>
              <tbody className="text-slate-800 dark:text-slate-200">
                {filteredProducts.length === 0 ? (
                  <tr>
                    <td colSpan={product ? 6 : 7} className="p-8 text-center text-slate-500">
                      {searchQuery ? 'No products found matching your search' : 'No products available'}
                    </td>
                  </tr>
                ) : (
                  filteredProducts.map((adjustment, index) => {
                    const globalIndex = adjustments.findIndex(adj => adj.product_id === adjustment.product_id);
                    const newStock = calculateNewStock(adjustment.current_stock, adjustment.quantity_change);
                    const hasChanges = adjustment.quantity_change !== 0;

                    return (
                      <tr
                        key={adjustment.product_id}
                        className={`border-b border-slate-200 dark:border-slate-700 hover:bg-slate-50 dark:hover:bg-slate-800/50 ${
                          adjustment.selected ? 'bg-blue-50 dark:bg-blue-900/10' : ''
                        }`}
                      >
                        {!product && (
                          <td className="p-3">
                            <input
                              type="checkbox"
                              checked={adjustment.selected}
                              onChange={() => toggleProductSelection(globalIndex)}
                              className="rounded border-slate-400 text-blue-600 focus:ring-blue-500"
                            />
                          </td>
                        )}
                        <td className="p-3">
                          <div className="font-semibold">
                            <span className="text-slate-800 dark:text-slate-100">{adjustment.name}</span>
                            <div className="text-sm text-slate-500 dark:text-slate-400">
                              Current: {adjustment.current_stock}
                            </div>
                          </div>
                        </td>
                        <td className="p-3 text-center font-semibold text-slate-800 dark:text-slate-100">
                          {adjustment.current_stock}
                        </td>
                        <td className="p-3">
                          <div className="flex items-center justify-center w-28 mx-auto">
                            <button
                              type="button"
                              onClick={() => decreaseQuantity(globalIndex)}
                              className="px-2 py-1 bg-slate-200 dark:bg-slate-700 rounded-l-md hover:bg-slate-300 dark:hover:bg-slate-600"
                              disabled={!adjustment.selected}
                            >
                              <Minus className="w-3 h-3" />
                            </button>
                            <input
                              type="text"
                              value={adjustment.quantity_change}
                              onChange={(e) => {
                                const value = e.target.value === '' ? 0 : parseInt(e.target.value) || 0;
                                updateAdjustment(globalIndex, 'quantity_change', value);
                              }}
                              className={`w-12 text-center bg-white dark:bg-slate-800 border-y border-slate-200 dark:border-slate-700 focus:ring-0 focus:border-blue-500 font-semibold ${
                                adjustment.quantity_change > 0 ? 'text-green-600 dark:text-green-400' :
                                adjustment.quantity_change < 0 ? 'text-red-600 dark:text-red-400' : ''
                              }`}
                              disabled={!adjustment.selected}
                            />
                            <button
                              type="button"
                              onClick={() => increaseQuantity(globalIndex)}
                              className="px-2 py-1 bg-slate-200 dark:bg-slate-700 rounded-r-md hover:bg-slate-300 dark:hover:bg-slate-600"
                              disabled={!adjustment.selected}
                            >
                              <Plus className="w-3 h-3" />
                            </button>
                          </div>
                        </td>
                        <td className="p-3 text-center">
                          <div className="font-bold text-blue-600 dark:text-blue-400">{newStock}</div>
                          {getStockStatusBadge(adjustment.current_stock, adjustment.quantity_change)}
                        </td>
                        <td className="p-3">
                          {hasChanges ? (
                            <div className="w-5 h-5 text-green-500 mx-auto">
                              <svg className="w-full h-full" fill="currentColor" viewBox="0 0 20 20">
                                <path fillRule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707-9.293a1 1 0 00-1.414-1.414l2-2a1 1 0 001.414 0l4-4z" clipRule="evenodd" />
                              </svg>
                            </div>
                          ) : (
                            <span className="text-slate-400">â€”</span>
                          )}
                        </td>
                        <td className="p-3">
                          <input
                            type="text"
                            value={adjustment.notes}
                            onChange={(e) => updateAdjustment(globalIndex, 'notes', e.target.value)}
                            className="w-32 bg-white dark:bg-slate-800 border border-slate-300 dark:border-slate-600 rounded-md focus:ring-blue-500 focus:border-blue-500"
                            placeholder="Optional notes"
                            disabled={!adjustment.selected}
                          />
                        </td>
                      </tr>
                    );
                  })
                )}
              </tbody>
            </table>
          </div>

          <div className="bg-yellow-50 dark:bg-yellow-500/10 p-4 rounded-lg border border-yellow-200 dark:border-yellow-500/20">
            <div className="flex items-start gap-2">
              <Info className="w-5 h-5 text-yellow-600 dark:text-yellow-400 mt-0.5" />
              <div className="flex-1">
                <h3 className="text-base font-bold text-yellow-800 dark:text-yellow-200">Stock Adjustment Summary</h3>
                <div className="mt-2 grid grid-cols-1 sm:grid-cols-3 gap-4 text-sm text-yellow-700 dark:text-yellow-300">
                  <div>
                    <span className="font-semibold">Selected products:</span>
                    <span className="ml-2 font-bold text-yellow-900 dark:text-yellow-100">{selectedCount}</span>
                  </div>
                  <div>
                    <span className="font-semibold">With changes:</span>
                    <span className="ml-2 font-bold text-yellow-900 dark:text-yellow-100">{hasChangesCount}</span>
                  </div>
                  <div>
                    <span className="font-semibold">Total stock change:</span>
                    <span className={`ml-2 font-bold ${totalStockChange >= 0 ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}`}>
                      {totalStockChange > 0 ? '+' : ''}{totalStockChange}
                    </span>
                  </div>
                </div>
              </div>
          </div>

          <div className="p-6 bg-slate-50 dark:bg-slate-800/50 border-t border-slate-200 dark:border-slate-700 flex justify-between items-center rounded-b-lg">
            <button
              type="button"
              onClick={handleBulkReset}
              className="px-4 py-2 text-sm font-semibold text-slate-700 dark:text-slate-200 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-600"
            >
              Reset All
            </button>
            <div className="flex items-center gap-3">
              <button
                type="button"
                onClick={onClose}
                className="px-4 py-2 text-sm font-semibold text-slate-700 dark:text-slate-200 bg-white dark:bg-slate-700 border border-slate-300 dark:border-slate-600 rounded-lg hover:bg-slate-100 dark:hover:bg-slate-600"
              >
                Cancel
              </button>
              <button
                type="submit"
                disabled={loading || hasChangesCount === 0}
                className="px-6 py-2 text-sm font-semibold text-white bg-blue-600 rounded-lg hover:bg-blue-700 disabled:opacity-50 disabled:cursor-not-allowed"
              >
                {loading ? 'Processing...' : `Apply Stock Changes (${hasChangesCount})`}
              </button>
            </div>
          </div>
        </form>
      </div>
    </div>
  );
}